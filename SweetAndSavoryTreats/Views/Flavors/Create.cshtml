@{
  Layout = "_Layout";
}

@model SweetAndSavoryTreats.Models.Flavor

<h4>Add a new flavor</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { required="required", autocomplete="off"})

    <input type="submit" value="Add flavor" class="btn btn-outline-success">
}
<input type="button" class="btn btn-outline-primary" value="Back to list" onclick="location.href='@Url.Action("Index")'">
