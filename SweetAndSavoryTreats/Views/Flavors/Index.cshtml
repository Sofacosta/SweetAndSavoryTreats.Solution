@{
  Layout = "_Layout";
}

@using SweetAndSavoryTreats.Models
@model List<SweetAndSavoryTreats.Models.Flavor>

<h2>Flavors</h2>

<hr>
<input type="button" class="btn btn-outline-success" value="Add new flavor" onclick="location.href='@Url.Action("Create")'">
<input type="button" class="btn btn-outline-primary" value="Home" onclick="location.href='@Url.Action("Index", "Home")'">
<hr>

<h4>All flavors:</h4>
@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
}
<ul>
@foreach (Flavor flavor in Model)
{
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
}
</ul>