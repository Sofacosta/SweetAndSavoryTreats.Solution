@{
  Layout = "_Layout";
}

@using SweetAndSavoryTreats.Models
@model List<SweetAndSavoryTreats.Models.Treat>

<h2>Treats</h2>

<hr>
<input type="button" class="btn btn-outline-success" value="Add new treat" onclick="location.href='@Url.Action("Create")'">
<input type="button" class="btn btn-outline-primary" value="Home" onclick="location.href='@Url.Action("Index", "Home")'">
<hr>

<h4>All treats:</h4>
@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
}
<ul>
@foreach (Treat treat in Model)
{
    <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
}
</ul>
